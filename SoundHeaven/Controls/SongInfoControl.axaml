<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:SoundHeaven.ViewModels"
             x:Class="SoundHeaven.Controls.SongInfoControl"
             x:DataType="viewModels:MainWindowViewModel">

    <StackPanel Orientation="Vertical">
        <!-- Title with scrolling effect -->
        <Border ClipToBounds="True" Width="200" Height="30" Background="Transparent">
            <Canvas Width="{Binding ControlWidth}">
                <TextBlock Text="{Binding CurrentSong.Title}" FontSize="14" FontWeight="Bold" Foreground="White"
                           Canvas.Left="{Binding TitleScrollPosition}"/>
            </Canvas>
        </Border>

        <!-- Artist without scrolling effect -->
        <Border Width="200" Height="30" Background="Transparent">
            <TextBlock Text="{Binding CurrentSong.Artist}" FontSize="14" Foreground="Gray"
                       HorizontalAlignment="Center"/>
        </Border>
    </StackPanel>
</UserControl>