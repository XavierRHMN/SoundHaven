<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SoundHeaven.ViewModels"
             x:Class="SoundHeaven.Controls.ShuffleControl"
             x:DataType="vm:ShuffleControlViewModel">

    <Button x:Name="ShuffleButton"
            Command="{Binding ToggleShuffleCommand}"
            Background="Transparent"
            Width="60" Height="60"
            CornerRadius="30"
            ToolTip.Tip="Toggle Shuffle">

        <Svg Path="avares://SoundHeaven/Assets/Icons/shuffle.svg"
             Opacity="{Binding IsShuffleEnabled, Converter={StaticResource BooleanToOpacityConverter}, ConverterParameter='1,0.5'}">
            <Svg.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                </Transitions>
            </Svg.Transitions>
        </Svg>
    </Button>
</UserControl>