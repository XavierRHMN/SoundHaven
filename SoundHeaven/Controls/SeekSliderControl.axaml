<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:themes="clr-namespace:Avalonia.Themes.Simple;assembly=Avalonia.Themes.Simple"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SoundHeaven.Controls.SeekSliderControl"
             xmlns:viewModels="clr-namespace:SoundHeaven.ViewModels"
             x:DataType="viewModels:MainWindowViewModel">
  
    <Slider Minimum="0" Maximum="{Binding CurrentSong.Length}" Margin="30 0"
            Value="{Binding SeekPosition, Mode=TwoWay}"
            ValueChanged="OnValueChanged"
            PointerCaptureLost="OnPointerCaptureLost"/>
</UserControl>