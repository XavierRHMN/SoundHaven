<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:SoundHeaven.ViewModels"
             xmlns:views="clr-namespace:SoundHeaven.Views"
             x:Class="SoundHeaven.Views.PlaylistView"
             x:DataType="viewModels:PlaylistViewModel">

    <Grid RowDefinitions="100,Auto,*">
        <!-- Playlist Banner -->
        <Border Grid.Row="0" Background="{StaticResource ToolBarColor}">
            <TextBlock Text="Playlist Banner" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="24" Foreground="White" />
        </Border>

        <!-- Shared Grid for Headers and Items -->
        <Grid Grid.Row="1" Grid.RowSpan="2" x:Name="MainGrid" Background="{StaticResource ToolBarColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" MinWidth="100" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" MinWidth="100" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" MinWidth="100" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="3*" MinWidth="100" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Column Headers -->
            <TextBlock Text="Title" Grid.Column="0" Grid.Row="0" Classes="HeaderText" />
            <GridSplitter Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Width="5" 
                          Background="Gray" ResizeBehavior="PreviousAndNext" />
            <TextBlock Text="Artist" Grid.Column="2" Grid.Row="0" Classes="HeaderText" />
            <GridSplitter Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Width="5" 
                          Background="Gray" ResizeBehavior="PreviousAndNext" />
            <TextBlock Text="Duration" Grid.Column="4" Grid.Row="0" Classes="HeaderText" />
            <GridSplitter Grid.Column="5" Grid.Row="0" Grid.RowSpan="2" Width="5" 
                          Background="Gray" ResizeBehavior="PreviousAndNext" />
            <TextBlock Text="Filepath" Grid.Column="6" Grid.Row="0" Classes="HeaderText" />

            <!-- ScrollViewer and ItemsRepeater for playlist songs -->
            <ScrollViewer Grid.Row="1" Grid.ColumnSpan="7">
                <ListBox ItemsSource="{Binding PlaylistSongs}" SelectedItem="{Binding PlaylistCurrentSong}" Background="{StaticResource ToolBarColor}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid x:Name="ItemGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{Binding #MainGrid.ColumnDefinitions[0].Width}" />
                                    <ColumnDefinition Width="{Binding #MainGrid.ColumnDefinitions[2].Width}" />
                                    <ColumnDefinition Width="{Binding #MainGrid.ColumnDefinitions[4].Width}" />
                                    <ColumnDefinition Width="{Binding #MainGrid.ColumnDefinitions[6].Width}" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Classes="ItemText" Text="{Binding Title}" Grid.Column="0" />
                                <TextBlock Classes="ItemText" Text="{Binding Artist}" Grid.Column="1" />
                                <TextBlock Classes="ItemText" 
                                           Text="{Binding Duration, Converter={StaticResource TimeSpanToMinutesSecondsConverter}}"
                                           Grid.Column="2" />
                                <TextBlock Classes="ItemText"
                                           Text="{Binding FilePath, Converter={StaticResource FilePathShortenerConverter}}"
                                           Grid.Column="3" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Grid>
    </Grid>

    <UserControl.Styles>
        <Style Selector="TextBlock.HeaderText">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontFamily" Value="avares://SoundHeaven/Assets/Fonts/Nunito/Nunito-VariableFont.ttf#Nunito" />
        </Style>
        <Style Selector="TextBlock.ItemText">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontFamily" Value="avares://SoundHeaven/Assets/Fonts/Nunito/Nunito-VariableFont.ttf#Nunito" />
            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        </Style>
    </UserControl.Styles>

</UserControl>
