<UserControl x:Class="SoundHeaven.Views.HomeView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SoundHeaven.ViewModels"
             xmlns:models="clr-namespace:SoundHeaven.Models"
             xmlns:controls="clr-namespace:SoundHeaven.Controls"
             x:Name="Root"
             x:DataType="vm:HomeViewModel">

    <!-- Main Grid with ToolBarColor Background -->
    <Grid Background="{StaticResource ToolBarColor}">
        <!-- Define the grid with 2 rows and 2 columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Banner row -->
            <RowDefinition Height="*"/>    <!-- Content row -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/> <!-- Left column -->
            <ColumnDefinition Width="*"/> <!-- Right column -->
        </Grid.ColumnDefinitions>

        <!-- First Row: Banner spanning 2 columns -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Welcome, Home"
                   HorizontalAlignment="Center"
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0,20"/>

        <!-- Second Row, First Column: StackPanel with two Grids -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center">
            <!-- First Grid: Recommended for you -->
            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Title -->
                    <RowDefinition Height="Auto"/> <!-- Album Artworks -->
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Recommended for you"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Album Artworks in ScrollViewer -->
                <ScrollViewer Grid.Row="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              Theme="{StaticResource MaterialModernScrollViewer}"
                              Height="220" 
                              Margin="0">
                    <ItemsControl ItemsSource="{Binding RecommendedTracks}">
                        <!-- Define the ItemsPanel as a UniformGrid with 2 columns -->
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2"/> <!-- Removed Rows="2" -->
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
        
                        <!-- Simplify the ItemTemplate to display a single image -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:Song">
                                <Border CornerRadius="15"
                                        Margin="5"
                                        Background="Transparent"
                                        ClipToBounds="True"> <!-- Ensures rounded corners -->
                                    <controls:AsyncImageControl Width="100"
                                                                Height="100"
                                                                SourceUrl="{Binding ArtworkUrl}"
                                                                Stretch="UniformToFill" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Second Grid: Top Tracks -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Title -->
                    <RowDefinition Height="Auto"/> <!-- Album Artworks -->
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Top Tracks"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Album Artworks in ScrollViewer -->
                <ScrollViewer Grid.Row="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              Theme="{StaticResource MaterialModernScrollViewer}"
                              Height="220" 
                              Margin="0">
                    <ItemsControl ItemsSource="{Binding TopTracks}">
                        <!-- Define the ItemsPanel as a UniformGrid with 2 columns -->
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2"/> <!-- Removed Rows="2" -->
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
        
                        <!-- Simplify the ItemTemplate to display a single image -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:Song">
                                <Border CornerRadius="15"
                                        Margin="5"
                                        Background="Transparent"
                                        ClipToBounds="True"> <!-- Ensures rounded corners -->
                                    <controls:AsyncImageControl Width="100"
                                                                Height="100"
                                                                SourceUrl="{Binding ArtworkUrl}"
                                                                Stretch="UniformToFill" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </StackPanel>

        <!-- Second Row, Second Column: Recently Played Tracks -->
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Recently Played Tracks"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <!-- ScrollViewer with Material UI Scrollbar -->
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Theme="{StaticResource MaterialModernScrollViewer}">
                <ItemsControl ItemsSource="{Binding RecentlyPlayedTracks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:Song">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <!-- Album Artwork -->
                                <Border CornerRadius="5"
                                        Margin="5"
                                        Background="Transparent"
                                        ClipToBounds="True"> <!-- Ensures rounded corners -->
                                    <controls:AsyncImageControl Width="50"
                                                               Height="50"
                                                               SourceUrl="{Binding ArtworkUrl}"
                                                               Stretch="UniformToFill" />
                                </Border>
                                <!-- Song Details -->
                                <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Artist}" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
