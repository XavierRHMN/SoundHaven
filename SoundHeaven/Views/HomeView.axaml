<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:SoundHeaven.ViewModels"
             x:Class="SoundHeaven.Views.HomeView"
             x:DataType="viewModels:HomeViewModel">
    
    <ListBox Background="{StaticResource ToolBarColor}"
             Foreground="White"
             ItemsSource="{Binding HomeViewSongs}"
             SelectedItem="{Binding HomeViewCurrentSong, Mode=TwoWay}"
             Margin="0">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Title}" FontSize="14" Width="500"/>
                    <TextBlock Text="{Binding Artist}" FontSize="14" Width="100"/>
                    <TextBlock Text="{Binding Duration, Converter={StaticResource TimeSpanToMinutesSecondsConverter}}" FontSize="14" Width="75"/>
                    <TextBlock Text="{Binding FilePath, Converter={StaticResource FilePathShortenerConverter}}" FontSize="14" Width="400"/>
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>

</UserControl>