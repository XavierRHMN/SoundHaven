<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ripple="clr-namespace:Material.Ripple;assembly=Material.Ripple"
        xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles">

    <!-- Slider styles -->
    <Style Selector="Slider">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style Selector="Slider /template/ RepeatButton#PART_DecreaseButton" />

    <Style Selector="Slider /template/ RepeatButton#PART_IncreaseButton">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style Selector="Slider /template/ Thumb">
        <Setter Property="Template">
            <ControlTemplate>
                <Ellipse Width="12" Height="12" Fill="White" Stroke="{StaticResource PrimaryHueMidBrush}"
                         StrokeThickness="2" />
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>